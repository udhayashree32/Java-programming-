class Main {
    public static void main(String[] args) {
        char[] a={'9','0','9','8','1','2','3','4','5','6','7'};
       
        
     String str="Udhaya";
     str.getChars(0,6,a,4);
     System.out.println(a);
     System.out.println(str);
     
    }
}
